<?xml version="1.0" encoding="utf-8"?>
<!-- activity_create_account.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    >

    <TextView
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/lavander"
        android:id="@+id/createAccountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="Create an Account"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back_login"
        android:padding="8dp"
        android:layout_marginTop="16dp"

        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:hint="Username"
        android:layout_below="@id/createAccountTitle"
        android:id="@+id/editTextName"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back_login"
        android:padding="8dp"
        android:layout_marginTop="16dp"

        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:id="@+id/editTextEmailCreate"

        android:layout_below="@id/editTextName"
        android:hint="Email Address"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/back_login"
        android:padding="8dp"
        android:layout_marginTop="16dp"

        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:id="@+id/editTextPasswordCreate"

        android:layout_below="@id/editTextEmailCreate"

        android:hint="Password"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_login"
        android:padding="8dp"
        android:layout_marginTop="16dp"

        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:id="@+id/editTextConfirmPassword"
        android:layout_below="@id/editTextPasswordCreate"
        android:hint="Confirm Password"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnConfirmSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAccountTitle"
        android:layout_marginTop="256dp"
        android:text="Sign up"
        android:backgroundTint="@color/lavander"

        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_arrow"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:contentDescription="Back"
            android:layout_marginBottom="20dp"
            />

    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>
